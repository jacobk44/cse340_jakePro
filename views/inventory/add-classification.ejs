
<h1>
    <%= title %>
</h1>

<div class="flash-home">
    <%- messages() %>
</div>


<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
  </ul>
<% } %>


<section class="add-classification">

    <form action="/inv/add-classification" method="post">
        <label for="classification_name">
            Classification Name
        </label>

        <p class="form-note">
            Classification name must not contain spaces or special characters.
        </p>

        <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z0-9]+$"
            title="Letters and numbers only. No spaces or special characters.">

        <button type="submit">Add Classification</button>
    </form>
</section>