<h1 class="logh1">
    <%=title%>
</h1>


<div class="flash-home">
    <%- messages() %>
</div>

<div class="login-container">
    <form action="/account/login" method="post" class="cf1">
        <fieldset class="login-fieldset">
            <legend>Login to your account</legend>

            <label for="email">Email:</label>
            <input type="email" id="email" name="account_email" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="account_password" required>
            <span id="pswdBtn" style="cursor:pointer;">Show Password</span>


            <input type="submit" value="Login">

            <p class="signup-link">
                Don't have an account?
                <a href="/account/register">Sign up</a>
            </p>
        </fieldset>
    </form>
</div>