
<h1><%= title %></h1>

<div class="flash-home">
  <%- messages() %>
</div>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>




<!-- =========================
     Account Update Form
========================= -->
<form action="/account/update" method="post" id="The-inventory-form">
  <fieldset>
    <legend>Account Update</legend>

    <!-- Hidden account ID (optional, just for reference) -->
    <input type="hidden" name="account_id" value="<%= accountData?.account_id || '' %>">

    <label for="account_firstname">First Name</label>
    <input type="text" id="account_firstname" name="account_firstname" required
      value="<%= oldInput?.account_firstname || accountData?.account_firstname || '' %>">

    <label for="account_lastname">Last Name</label>
    <input type="text" id="account_lastname" name="account_lastname" required
      value="<%= oldInput?.account_lastname || accountData?.account_lastname || '' %>">

    <label for="account_email">Email</label>
    <input type="email" id="account_email" name="account_email" required
      value="<%= oldInput?.account_email || accountData?.account_email || '' %>">

    <button type="submit">Update Account</button>
  </fieldset>
</form>

<hr>

<!-- =========================
     Change Password Form
========================= -->
<form action="/account/update-password" method="post" id="The-inventory-form">
  <fieldset>
    <legend>Change Password</legend>

    <!-- Hidden account ID (optional) -->
    <input type="hidden" name="account_id" value="<%= accountData?.account_id || '' %>">

    <label for="password">New Password</label>
    <input type="password" id="password" name="account_password" required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      placeholder="At least 12 chars, 1 uppercase, 1 lowercase, 1 number, 1 special">

    <label for="password">Confirm Password</label>
    <input type="password" id="password" name="account_password_confirm" required placeholder="Re-enter your new password"
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

    <span id="pswdBtn" style="cursor:pointer;">Show Password</span>

    <button type="submit">Change Password</button>
  </fieldset>
</form>