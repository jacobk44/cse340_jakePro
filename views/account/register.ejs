<h1 class="logh1">
  <%=title%>
</h1>

<div class="flash-home">
  <%- messages() %>
</div>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
  </ul>
<% } %>




<div class="login-container">
  <form  action="/account/register" method="post" class="cf1" >
    <fieldset class="login-fieldset">

      <legend>Contact Information</legend>

      <label>First Name</label>
      <input type="text" name="account_firstname" placeholder="Enter you lastname" required value="<%= locals.account_firstname%>">

      <label>Last Name</label>
      <input type="text" name="account_lastname" placeholder=" Enter your lastname" required value="<%= locals.account_lastname%>">

      <label for="email">Email:</label>
      <input type="email" id="email" name="account_email" placeholder="Enter a valid email address" required value="<%= locals.account_email%>">

      <label for="password">Password:</label>
      <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
      <span id="pswdBtn" style="cursor:pointer;">Show Password</span>

      <input type="submit" value="register">

      <p class="signup-link">
        Login if already have account
        <a href="/account/login">Login</a>
      </p>
    </fieldset>
  </form>
</div>