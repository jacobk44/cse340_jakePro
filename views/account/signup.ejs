<h1 class="logh1">
    <%=title%>
</h1>


<div class="flash-home">
    <%- messages() %>
</div>

<div class="login-container">
    <form action="/account/signup" method="post" class="cf1">
        <fieldset class="login-fieldset">

            <legend>Contact Information</legend>

            <label >First Name</label>
            <input type="text" name="fname" >

            <label >Last Name</label>
            <input type="text" name="Sname" >

            <label>Phone Number* </label>
            <input type="tel" name="phone" placeholder="123456789" >

            <label for="email">Email:</label>
            <input type="email" id="email" name="account_email">

            <label for="password">Password:</label>
            <input type="password" id="password" name="account_password">

            <input type="submit" value="signup">

            <p class="signup-link">
                Login if already have account
                <a href="/account/login">Login</a>
            </p>
        </fieldset>
    </form>
</div>